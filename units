package ancientruins.units;


final public class Archer extends mainUnit {
    private String name;
    private int health;
    private int attack;
    private int movement;
    private int range;
    
    
public Archer (){
    super();
    name = "";
    health = 0;
    attack = 0;
    movement = 0;
    range = 0;
}

public Archer (String name, int health, int attack, int movement, int range){
    name = "Archer";
    health = 2;
    attack = 2;
    movement = 6;
    range = 2;
    
}   
}

